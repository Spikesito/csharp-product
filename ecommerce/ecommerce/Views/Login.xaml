<UserControl x:Class="ecommerce.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ecommerce.Views"
             xmlns:components="clr-namespace:ecommerce.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Width="100px" Text="Username:"/>
            <TextBox x:Name="UserTextBox" Grid.Row="1" Width="100px"/>
            <TextBlock Grid.Row="2" Width="100px" Text="Password:"/>
            <PasswordBox x:Name="PassBox" Grid.Row="3" Width="100px"/>

            <Button Grid.Row="4" Width="100px" Content="Send It" Click="Button_Click"/>
        </Grid>
    </Grid>
</UserControl>
